@page "/"

<PageTitle>Home - AccApp001</PageTitle>

<!-- Welcome Header -->
<div class="welcome-header mb-4">
    <h1 class="display-5 fw-bold text-primary mb-2">AccApp001</h1>
    <p class="lead text-muted">Azure-hosted Blazor Web Application</p>
    <p class="mb-4">A modern, responsive web application built with Blazor Server and hosted on Microsoft Azure. 
       Experience the power of .NET in the browser with server-side rendering and real-time connectivity.</p>
</div>

<!-- Feature Cards -->
<div class="row g-4 mb-5">
    <div class="col-md-6 col-lg-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-lightning-charge-fill text-primary" style="font-size: 2.5rem;"></i>
                </div>
                <h5 class="card-title">High Performance</h5>
                <p class="card-text text-muted">Server-side rendering with SignalR for real-time updates and optimal performance.</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-cloud-check-fill text-success" style="font-size: 2.5rem;"></i>
                </div>
                <h5 class="card-title">Cloud-Ready</h5>
                <p class="card-text text-muted">Deployed on Azure with scalability, reliability, and global reach built-in.</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="feature-icon mb-3">
                    <i class="bi bi-phone-fill text-info" style="font-size: 2.5rem;"></i>
                </div>
                <h5 class="card-title">Responsive Design</h5>
                <p class="card-text text-muted">Optimized for all devices with mobile-first Bootstrap styling.</p>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Quick Actions</h5>
                <p class="card-text text-muted">Explore the application features and capabilities.</p>
                <div class="d-flex gap-3 flex-wrap">
                    <a href="/counter" class="btn btn-primary">
                        <i class="bi bi-plus-square me-2"></i>Try Counter
                    </a>
                    <a href="/weather" class="btn btn-outline-primary">
                        <i class="bi bi-cloud-sun me-2"></i>View Weather
                    </a>
                    <a href="https://learn.microsoft.com/aspnet/core/blazor/" target="_blank" class="btn btn-outline-secondary">
                        <i class="bi bi-book me-2"></i>Documentation
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
