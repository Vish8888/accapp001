<Router AppAssembly="typeof(Program).Assembly" 
        AdditionalAssemblies="new[] { typeof(Program).Assembly }"
        OnNavigateAsync="OnNavigateAsync">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Page Not Found - AccApp001</PageTitle>
        <LayoutView Layout="typeof(Layout.MainLayout)">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="card">
                            <div class="card-body text-center p-5">
                                <i class="bi bi-compass text-warning mb-3" style="font-size: 4rem;"></i>
                                <h2 class="card-title mb-3">Page Not Found</h2>
                                <p class="card-text text-muted mb-4">
                                    Sorry, we couldn't find the page you're looking for. 
                                    The page may have been moved, deleted, or you entered an incorrect URL.
                                </p>
                                <div class="d-grid gap-2 d-md-block">
                                    <a href="/" class="btn btn-primary">
                                        <i class="bi bi-house me-2"></i>Return Home
                                    </a>
                                    <button class="btn btn-outline-secondary" onclick="history.back()">
                                        <i class="bi bi-arrow-left me-2"></i>Go Back
                                    </button>
                                </div>
                                <div class="mt-4">
                                    <small class="text-muted">Error 404 - Page Not Found</small>
                                    <br />
                                    <small class="text-muted">Available routes: Home (/), Counter (/counter), Weather (/weather)</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>

@code {
    private async Task OnNavigateAsync(NavigationContext context)
    {
        // Handle navigation events for Azure App Service
        // This ensures proper routing in cloud environments
        try
        {
            // Log navigation for debugging in Azure
            Console.WriteLine($"Navigating to: {context.Path}");
            
            // Allow navigation to proceed
            await Task.CompletedTask;
        }
        catch (Exception ex)
        {
            // Log errors for Azure Application Insights
            Console.WriteLine($"Navigation error: {ex.Message}");
            throw;
        }
    }
}
